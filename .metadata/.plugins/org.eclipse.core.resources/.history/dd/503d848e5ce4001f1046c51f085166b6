		return "";
	}
	
	@RequestMapping(value = "files", method = RequestMethod.GET)
	public ModelAndView getFiles() throws Exception {
	    List<fileVO> flst = dao.getFiles();  // 변수 이름 수정
	    Map<Integer, fileVO> fdata = new HashMap<>();  // 타입 수정

	    for (fileVO v : flst) {
	        File file = new File(uploadPath + v.getF_path());
	        if (!file.exists()) {
	            continue;
	        }
	        fdata.put(v.getB_seq(), v);
	    }

	    ModelAndView mv = new ModelAndView();
	    mv.setViewName("getfiles");
	    mv.addObject("fdata", fdata);
	    return mv;
	}

	@RequestMapping(value = "/display", method = RequestMethod.GET)
	public ResponseEntity<byte[]> displayFile(@RequestParam("name") String fileName) throws Exception {
	    InputStream in = null;
	    ResponseEntity<byte[]> entity = null;

	    try {
	        // 파일 경로를 지정
	        File file = new File(uploadPath + fileName);

	        // 파일이 존재하는지 확인
	        if (!file.exists()) {
	            return ResponseEntity.status(HttpStatus.NOT_FOUND).build();
	        }

	        // 파일을 바이트 배열로 읽기
	        in = new FileInputStream(file);
	        byte[] bytes = new byte[(int) file.length()];
	        in.read(bytes);

	        // 헤더를 설정하여 파일 반환
	        entity = ResponseEntity
	                .ok()
	                .header(HttpHeaders.CONTENT_TYPE, "application/octet-stream")  // 파일 유형 설정
	                .body(bytes);  // 바이트 배열 반환
	    } catch (IOException e) {
	        return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).build();
	    } finally {
	        if (in != null) {
	            in.close();
	        }
	    }

	    return entity;
	}

	
	
}

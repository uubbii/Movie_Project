function blockUser() {
    const userId = "차단할_사용자_ID"; // 실제 사용자 ID로 변경 필요

    fetch(`/user/block?target=${userId}`, {
        method: "POST",
    })
    .then(response => {
        if (response.ok) {
            alert("사용자를 차단했습니다.");
        } else {
            alert("차단에 실패했습니다.");
        }
    })
    .catch(error => console.error("에러:", error));
}

function updatepassword(){
    let uid = $("#uid").val();
    let upupw = $("#upupw").val();
    let upupw2 = $("#upupw2").val();
    console.log(uid);
    console.log(upupw);
    console.log(upupw2);
    if (upupw === '') {
        alert('íŒ¨ìŠ¤ì›Œë“œë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
        $("#upupw").focus();
        return false;
    } 
    //let pwExp = /^(?=.*?[a-z])(?=.*?[0-9])(?=.*?[~?!@#$%^&*_-]).{8,}$/;
    let pwExp = /^(?=.*[a-zA-Z])(?=.*[0-9])(?=.*[!@#$%^&*?_]).{8,}$/;
    let pwExp2 = /(\w)\1\1\1/;
    if (!pwExp.test(upupw)){
        alert('íŒ¨ìŠ¤ì›Œë“œëŠ” ì˜ì–´,ìˆ«ì,íŠ¹ìˆ˜ê¸°í˜¸ë¥¼ í¬í•¨í•˜ê³ , ê°™ì€ ë¬¸ìëŠ” 4ë²ˆ ì´ìƒ ë°˜ë³µí•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
        $("#upupw").focus();
        return false;
    }
    if( pwExp2.test(upupw)) {
        alert('2íŒ¨ìŠ¤ì›Œë“œëŠ” ì˜ì–´,ìˆ«ì,íŠ¹ìˆ˜ê¸°í˜¸ë¥¼ í¬í•¨í•˜ê³ , ê°™ì€ ë¬¸ìëŠ” 4ë²ˆ ì´ìƒ ë°˜ë³µí•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
        $("#upupw2").focus;
        return false;
    }
    if(upupw != upupw2){
       alert('ë‘ íŒ¨ìŠ¤ì›Œë“œê°€ ì¼ì¹˜í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.')
       $("#upupw").focus();
       return false;
    }

    // ë¹„ë™ê¸° ë°©ì‹ -> ajax
    // ê²½ë¡œ, ë°ì´í„°, ë°ì´í„° ì „ì†¡ ë°©ì‹, ì„±ê³µ or ì‹¤íŒ¨
    $.ajax({
        url:'/User_Update-password',
        data: {
            uid: uid
            ,upw: upupw
        },
        type: 'POST',
        success: function(result){
           let msg = "${msg}";
           console.log(msg);
           console.log(result);
           console.log(msg);
            // ì„±ê³µ ì‹œ ê²°ê³¼ê°’ ë¦¬í„´(result)ì´ ì˜ ë˜ì—ˆì„ ê²½ìš°
            if(result == 0){
               console.log("ì—ëŸ¬");
               alert("ë¹„ë°€ë²ˆí˜¸ ìˆ˜ì • ì‹¤íŒ¨");
               //if(msg == "uppw_OK"){alert('ì •ë³´ìˆ˜ì • ì„±ê³µ');}
            }else{
               console.log("ì„±ê³µ");
               alert("ë¹„ë°€ë²ˆí˜¸ ìˆ˜ì • ì„±ê³µ");
               window.location.href = "/";
               //if(msg == "uppw_ERR"){alert('ì •ë³´ìˆ˜ì • ì‹¤íŒ¨');}
            }
        }
    });
}; // end of password ajax


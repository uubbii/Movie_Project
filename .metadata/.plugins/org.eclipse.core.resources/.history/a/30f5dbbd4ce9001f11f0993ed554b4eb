   modaladdr2.type = "text";
   modaladdr2.placeholder = "ìƒì„¸ì£¼ì†Œë¥¼ ì…ë ¥í•˜ì„¸ìš”";

   uppostSearch();
}


function updateinfo() {
    const form = document.getElementById('modalinfo'); 
    const formData = new FormData(form);

    formData.append("uid", document.getElementById('modalid').value);
    //formData.append("uphone", document.getElementById('modalphone').value);
    //formData.append("umail", document.getElementById('modalmail').value);
    formData.append("upost", document.getElementById('modalpost').value);
    formData.append("uaddr1", document.getElementById('modaladdr1').value);
    formData.append("uaddr2", document.getElementById('modaladdr2').value);

    console.log("ì „ì†¡í•  ë°ì´í„° í™•ì¸:");
    for (let pair of formData.entries()) {
        console.log(pair[0] + ": " + pair[1]);
    }
	for (let pair of formData.entries()) {
    console.log(`ğŸ“ ${pair[0]}: ${pair[1]}`);
	}

    $.ajax({
        url: '/User_Update-info',
        data: formData,
        type: 'POST',
        contentType: false,   // false ì„¤ì • (FormData ì‚¬ìš© ì‹œ í•„ìš”)
        processData: false,   // false ì„¤ì • (FormData ì‚¬ìš© ì‹œ í•„ìš”)
        enctype: 'multipart/form-data',
        cache: false,
        success: function(result) {
            console.log("ì„œë²„ ì‘ë‹µ:", result);
            if (result == "0") {
                console.log("ì—ëŸ¬ ë°œìƒ");
                alert("íšŒì›ì •ë³´ ìˆ˜ì • ì‹¤íŒ¨");
            } else {
                console.log("ì„±ê³µ");
                alert("íšŒì›ì •ë³´ ìˆ˜ì • ì„±ê³µ");
                window.location.href = "/";
            }
        },
        error: function(xhr, status, error) {
            console.error("AJAX ìš”ì²­ ì‹¤íŒ¨:", status, error);
            alert("ì„œë²„ ì˜¤ë¥˜ ë°œìƒ! ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.");
        }
    });
}

   
